---
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';
import Button from '../ui/Button.astro';
import type { Messages } from '../../i18n/config';
import type { SuccessStoriesPageCopy } from '../../data/pages';

interface Props {
  successStories: Messages['successStories'];
  contact: Messages['contact'];
  footerContact: Messages['footer']['contact'];
  copy: SuccessStoriesPageCopy;
  contactHref: string;
}

const { successStories, contact, footerContact, copy, contactHref } = Astro.props satisfies Props;
const sanitizedPhone = footerContact.phone.replace(/[^+\d]/g, '');
---

<section class="border-b border-white/10 bg-[rgba(5,9,20,0.9)] pb-12 pt-28 text-white">
  <Container class="space-y-10">
    <div class="space-y-5">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-white/70">{copy.hero.eyebrow}</p>
      <h1 class="font-display text-4xl font-semibold leading-tight sm:text-5xl">
        <span class="text-gradient">{copy.hero.title}</span>
      </h1>
      <p class="text-base text-white/90 sm:text-lg">{copy.hero.description}</p>
    </div>
    <div class="grid gap-6 sm:grid-cols-3">
      {copy.hero.supportingPoints.map((stat) => (
        <div class="rounded-[24px] border border-white/15 bg-white/5 p-5 text-center">
          <p class="font-display text-3xl font-semibold text-white">{stat.value}</p>
          <p class="text-xs uppercase tracking-[0.3em] text-white/70">{stat.label}</p>
        </div>
      ))}
    </div>
  </Container>
</section>

<section class="py-16">
  <Container class="space-y-12">
    <SectionHeading
      eyebrow={successStories.eyebrow}
      title={successStories.heading}
      description={successStories.intro}
    />
    <div class="grid gap-10 lg:grid-cols-2">
      <div class="space-y-4 rounded-[28px] border border-white/15 bg-white/5 p-6">
        <h2 class="font-display text-2xl text-white">{successStories.featuredProjects.heading}</h2>
        <ul class="grid gap-2 text-sm text-white/80">
          {successStories.featuredProjects.items.map((item) => (
            <li class="flex items-start gap-2">
              <span aria-hidden="true" class="mt-1 h-1.5 w-1.5 rounded-full bg-[#0A84FF]"></span>
              <span>{item}</span>
            </li>
          ))}
        </ul>
      </div>
      <div class="space-y-4 rounded-[28px] border border-white/15 bg-white/5 p-6">
        <h2 class="font-display text-2xl text-white">{successStories.timeline.heading}</h2>
        <ul class="space-y-3 text-white/80">
          {successStories.timeline.items.map((item) => (
            <li class="flex items-start gap-4">
              <span class="text-sm font-semibold text-white">{item.year}</span>
              <span class="text-sm">{item.description}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="grid gap-8 rounded-[32px] border border-white/15 bg-white/5 p-6 lg:grid-cols-[2fr_1fr]">
      <div>
        <h3 class="font-display text-2xl text-white">{successStories.recentProjects.heading}</h3>
        <ul class="mt-4 space-y-3 text-white/80">
          {successStories.recentProjects.items.map((item) => (
            <li class="flex items-start gap-4">
              <span class="text-sm font-semibold text-white">{item.year}</span>
              <span class="text-sm">{item.description}</span>
            </li>
          ))}
        </ul>
        {successStories.caseStudiesCta ? (
          <div class="mt-6">
            <Button variant="secondary" size="md" href={successStories.caseStudiesCta.href}>
              {successStories.caseStudiesCta.label}
            </Button>
          </div>
        ) : null}
      </div>
      <div class="space-y-4">
        {copy.insights.map((insight) => (
          <div class="rounded-2xl border border-white/15 bg-white/10 p-4">
            <p class="font-semibold text-white">{insight.title}</p>
            <p class="text-sm text-white/75">{insight.description}</p>
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>

<section class="py-12">
  <Container class="grid gap-6 md:grid-cols-3">
    {successStories.gallery.map((image) => (
      <figure class="overflow-hidden rounded-[24px] border border-white/10">
        <img
          src={image.src}
          alt={image.alt}
          loading="lazy"
          decoding="async"
          class="h-64 w-full object-cover"
          width="480"
          height="320"
        />
      </figure>
    ))}
  </Container>
</section>

<section class="py-16">
  <Container class="rounded-[32px] border border-white/15 bg-gradient-to-r from-[#13385E] to-[#0B1F33] p-10 text-white">
    <p class="text-xs uppercase tracking-[0.3em] text-white/70">{contact.eyebrow}</p>
    <h2 class="mt-3 font-display text-3xl">{copy.cta.heading}</h2>
    <p class="text-white/80">{copy.cta.description}</p>
    <div class="mt-6 flex flex-wrap gap-3">
      <Button variant="primary" size="lg" href={contactHref}>
        {copy.cta.button}
      </Button>
    </div>
    <div class="mt-4 flex flex-wrap gap-6 text-sm text-white/75">
      <a href={`tel:${sanitizedPhone}`} class="hover:text-white">
        {footerContact.phone}
      </a>
      <a href={`mailto:${footerContact.email}`} class="hover:text-white">
        {footerContact.email}
      </a>
    </div>
  </Container>
</section>
