---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props satisfies Props;

const lastIndex = items.length - 1;
---

<nav aria-label="Breadcrumb" class="text-sm text-slate-200">
  <ol class="flex flex-wrap items-center gap-2">
    {
      items.map((item, index) => (
        <li class="flex items-center gap-2">
          {item.href && index !== lastIndex ? (
            <a class="transition hover:text-white" href={item.href}>
              {item.label}
            </a>
          ) : (
            <span aria-current="page" class="font-medium text-white">
              {item.label}
            </span>
          )}
          {index !== lastIndex && <span aria-hidden="true">/</span>}
        </li>
      ))
    }
  </ol>
</nav>
