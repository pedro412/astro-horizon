---
interface Props {
  id?: string;
  class?: string;
  background?: 'default' | 'tint' | 'dark';
  spacing?: 'default' | 'compact' | 'relaxed';
}

const {
  id,
  class: className = '',
  background = 'default',
  spacing = 'default',
} = Astro.props satisfies Props;

const backgroundStyles: Record<Props['background'], string> = {
  default: 'bg-transparent',
  tint:
    "relative isolate overflow-hidden bg-gradient-to-br from-[#e1e9fb] via-[#f3f6ff] to-white before:absolute before:inset-0 before:-z-10 before:bg-[radial-gradient(circle_at_top_left,rgba(15,98,254,0.2),transparent_55%)] before:opacity-95 before:content-[''] after:absolute after:inset-x-0 after:bottom-[-140px] after:h-[460px] after:-z-10 after:bg-[radial-gradient(circle_at_bottom,rgba(10,182,139,0.28),transparent_65%)] after:opacity-85 after:content-['']",
  dark: 'bg-deep text-white',
};

const spacingStyles: Record<Props['spacing'], string> = {
  compact: 'py-10 sm:py-14',
  default: 'py-16 sm:py-20',
  relaxed: 'py-24 sm:py-32',
};
---

<section
  id={id}
  class={`${backgroundStyles[background]} ${spacingStyles[spacing]} ${className}`}
>
  <slot />
</section>
