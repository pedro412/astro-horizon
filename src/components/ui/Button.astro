---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit';
  class?: string;
  icon?: string;
  target?: string;
  rel?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  class: className = '',
  target,
  rel,
} = Astro.props satisfies Props;

const baseStyles =
  'inline-flex items-center justify-center gap-2 rounded-full font-semibold transition duration-200 transform focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 disabled:pointer-events-none disabled:opacity-60 backdrop-blur-xl';

const variantStyles: Record<Props['variant'], string> = {
  primary:
    'bg-[#0A84FF] !text-white shadow-[0_25px_70px_-25px_rgba(10,132,255,0.65)] hover:bg-[#2997FF] focus-visible:outline-[#2997FF]/60 active:scale-[0.99]',
  secondary:
    'bg-white/10 !text-white border border-white/20 shadow-[0_20px_50px_-30px_rgba(15,118,230,0.6)] hover:bg-white/20 focus-visible:outline-white/60 active:scale-[0.99]',
  ghost:
    'bg-transparent !text-white border border-white/25 hover:border-white/50 hover:bg-white/10 focus-visible:outline-white/60 active:scale-[0.99]',
};

const sizeStyles: Record<Props['size'], string> = {
  md: 'px-6 py-2.5 text-sm',
  lg: 'px-8 py-3.5 text-base',
};
---

{href ? (
  <a
    class={`${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${className}`}
    href={href}
    target={target}
    rel={rel}
  >
    <slot />
  </a>
) : (
  <button
    type={type}
    class={`${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${className}`}
  >
    <slot />
  </button>
)}
