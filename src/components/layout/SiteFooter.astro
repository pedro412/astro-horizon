---
import Container from '../ui/Container.astro';
import logo from '../../assets/bluehorizon-logo.png';

interface Props {
  footer: {
    tagline: string;
    officesHeading: string;
    offices: { city: string; address: string }[];
    contactHeading: string;
    contact: { phone: string; email: string };
    socialHeading: string;
    socials: { label: string; href: string }[];
    legal: string;
    seoLinks: { label: string; href: string }[];
  };
}

const { footer } = Astro.props satisfies Props;
---

<footer class="border-t border-white/10 bg-[rgba(5,9,20,0.72)] text-white backdrop-blur-2xl">
  <Container class="grid gap-12 py-16 md:grid-cols-4">
    <div class="md:col-span-2">
      <div class="flex items-center gap-4">
        <div class="flex h-11 w-11 items-center justify-center rounded-full bg-white/5">
          <img
            src={logo.src}
            alt="Blue Horizon logo"
            class="h-full w-full object-contain"
            loading="lazy"
            decoding="async"
          />
        </div>
        <div class="leading-tight">
          <p class="font-display text-xl font-semibold text-white">Blue Horizon</p>
          <p class="text-xs uppercase tracking-[0.25em] text-white/80">Maritime &amp; Docks</p>
        </div>
      </div>
      <p class="mt-6 max-w-md text-sm text-white">{footer.tagline}</p>
      <nav aria-label="Enlaces internos" class="mt-6">
        <ul class="flex flex-wrap gap-3 text-sm">
          {footer.seoLinks.map((link) => (
            <li>
              <a
                class="rounded-full border border-white/15 px-3 py-1.5 text-white transition hover:border-white/40 hover:text-white"
                href={link.href}
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
    <div>
      <h4 class="text-xs font-semibold uppercase tracking-[0.25em] text-white">{footer.officesHeading}</h4>
      <ul class="mt-4 space-y-3 text-sm text-white">
        {footer.offices.map((office) => (
          <li>
            <p class="font-semibold text-white">{office.city}</p>
            <p>{office.address}</p>
          </li>
        ))}
      </ul>
    </div>
    <div class="space-y-8">
      <div>
        <h4 class="text-xs font-semibold uppercase tracking-[0.25em] text-white">{footer.contactHeading}</h4>
        <div class="mt-4 space-y-2 text-sm text-white">
          <a class="block transition hover:text-white" href={`tel:${footer.contact.phone.replace(/[^+\d]/g, '')}`}>
            {footer.contact.phone}
          </a>
          <a class="block transition hover:text-white" href={`mailto:${footer.contact.email}`}>
            {footer.contact.email}
          </a>
        </div>
      </div>
      <div>
        <h4 class="text-xs font-semibold uppercase tracking-[0.25em] text-white">{footer.socialHeading}</h4>
        <ul class="mt-4 flex flex-wrap gap-3 text-sm">
          {footer.socials.map((social) => (
            <li>
              <a
                class="rounded-full border border-white/15 px-3 py-1.5 text-white transition hover:border-white/40 hover:text-white"
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
              >
                {social.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </Container>
  <div class="border-t border-white/10">
    <Container class="py-6 text-center text-xs uppercase tracking-[0.2em] text-white">
      {footer.legal}
    </Container>
  </div>
</footer>
