---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  value: {
    heading: string;
    lead: string;
    bullets: { title: string; description: string }[];
  };
}

const { value } = Astro.props satisfies Props;
---

<Section id="value" background="tint">
  <Container class="relative grid gap-12 lg:grid-cols-[1.05fr_1fr] lg:items-center">
    <div class="relative z-10">
      <SectionHeading
        eyebrow="BLUEHORIZON EDGE"
        title={value.heading}
        description={value.lead}
      />
    </div>
    <div class="relative z-10 grid gap-6 sm:grid-cols-2">
      {value.bullets.map((bullet, index) => (
        <div class="surface-card h-full p-8 transition duration-200 hover:-translate-y-1 hover:shadow-xl">
          <div class="flex items-center gap-3 text-ocean-500">
            <span class="inline-flex h-11 w-11 items-center justify-center rounded-full bg-ocean-50 font-display text-lg font-semibold text-ocean-600">
              {String(index + 1).padStart(2, '0')}
            </span>
            <h3 class="font-display text-xl font-semibold text-deep">{bullet.title}</h3>
          </div>
          <p class="mt-4 text-base text-deep/70">{bullet.description}</p>
        </div>
      ))}
    </div>
    <div class="pointer-events-none absolute inset-0 -z-10 rounded-[40px] bg-[radial-gradient(circle_at_top_right,rgba(15,98,254,0.12),transparent_55%)]"></div>
  </Container>
</Section>
