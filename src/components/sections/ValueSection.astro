---
import Section from "../ui/Section.astro";
import Container from "../ui/Container.astro";
import SectionHeading from "../ui/SectionHeading.astro";
import LiquidGlassCard from "../ui/LiquidGlassCard.astro";

interface Props {
  value: {
    eyebrow: string;
    heading: string;
    lead: string;
    cards: {
      title: string;
      description: string;
      image: { src: string; alt: string };
    }[];
  };
}

const { value } = Astro.props satisfies Props;
---

<Section id="about" background="tint">
  <Container class="space-y-12">
    <SectionHeading
      align="center"
      eyebrow={value.eyebrow}
      title={value.heading}
      description={value.lead}
    />
    <div class="grid gap-6 sm:grid-cols-2 xl:grid-cols-2 max-w-6xl mx-auto">
      {
        value.cards.map((card) => (
          <LiquidGlassCard title={card.title} description={card.description} image={card.image} />
        ))
      }
    </div>
  </Container>
</Section>
