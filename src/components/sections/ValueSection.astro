---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  value: {
    heading: string;
    lead: string;
    bullets: { title: string; description: string }[];
  };
}

const { value } = Astro.props satisfies Props;
---

<Section id="value" background="tint">
  <Container class="grid gap-12 lg:grid-cols-[1.1fr_1fr] lg:items-center">
    <div>
      <SectionHeading
        eyebrow="BLUEHORIZON EDGE"
        title={value.heading}
        description={value.lead}
      />
    </div>
    <div class="grid gap-6">
      {value.bullets.map((bullet) => (
        <div class="rounded-[26px] border border-white/15 bg-white/10 p-8 shadow-[0_35px_120px_-60px_rgba(10,132,255,0.6)] backdrop-blur-2xl">
          <h3 class="font-display text-xl font-semibold text-white">{bullet.title}</h3>
          <p class="mt-3 text-base text-white">{bullet.description}</p>
        </div>
      ))}
    </div>
  </Container>
</Section>
