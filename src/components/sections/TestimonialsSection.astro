---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  testimonials: {
    heading: string;
    intro: string;
    items: { quote: string; name: string; role: string }[];
  };
}

const { testimonials } = Astro.props satisfies Props;
---

<Section id="testimonials" background="tint">
  <Container>
    <SectionHeading
      align="center"
      eyebrow="SUCCESS STORIES"
      title={testimonials.heading}
      description={testimonials.intro}
    />
    <div class="mt-14 grid gap-8 md:grid-cols-2">
      {testimonials.items.map((item) => (
        <blockquote class="h-full rounded-3xl border border-ocean-100 bg-white p-8 shadow-sm">
          <p class="text-base text-deep/80 sm:text-lg">“{item.quote}”</p>
          <footer class="mt-5 border-t border-ocean-100 pt-5 text-sm text-deep/70">
            <p class="font-semibold text-deep">{item.name}</p>
            <p>{item.role}</p>
          </footer>
        </blockquote>
      ))}
    </div>
  </Container>
</Section>
