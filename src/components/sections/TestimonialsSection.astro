---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  testimonials: {
    heading: string;
    intro: string;
    items: { quote: string; name: string; role: string }[];
  };
}

const { testimonials } = Astro.props satisfies Props;
---

<Section id="testimonials" background="tint">
  <Container>
    <SectionHeading
      align="center"
      eyebrow="SUCCESS STORIES"
      title={testimonials.heading}
      description={testimonials.intro}
    />
    <div class="mt-14 grid gap-8 md:grid-cols-2">
      {testimonials.items.map((item) => (
        <blockquote class="h-full rounded-[26px] border border-white/15 bg-white/10 p-8 shadow-[0_35px_120px_-60px_rgba(10,132,255,0.55)] backdrop-blur-2xl">
          <p class="text-base text-white sm:text-lg">“{item.quote}”</p>
          <footer class="mt-5 border-t border-white/10 pt-5 text-sm text-white">
            <p class="font-semibold text-white">{item.name}</p>
            <p>{item.role}</p>
          </footer>
        </blockquote>
      ))}
    </div>
  </Container>
</Section>
