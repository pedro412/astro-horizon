---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  testimonials: {
    heading: string;
    intro: string;
    items: { quote: string; name: string; role: string }[];
  };
}

const { testimonials } = Astro.props satisfies Props;
---

<Section id="testimonials" background="tint">
  <Container>
    <SectionHeading
      align="center"
      eyebrow="SUCCESS STORIES"
      title={testimonials.heading}
      description={testimonials.intro}
      theme="dark"
    />
    <div class="mt-14 grid gap-8 md:grid-cols-2 xl:grid-cols-3">
      {testimonials.items.map((item) => (
        <blockquote class="flex h-full flex-col justify-between rounded-[28px] bg-white/95 p-8 shadow-[0_25px_60px_-50px_rgba(9,34,64,0.8)] ring-1 ring-ocean-100/40">
          <p class="text-base text-deep/80 sm:text-lg">“{item.quote}”</p>
          <footer class="mt-6 flex items-center gap-4 border-t border-ocean-100/70 pt-6 text-sm text-deep/70">
            <div class="inline-flex h-12 w-12 items-center justify-center rounded-full bg-ocean-50 font-display text-base font-semibold text-ocean-600">
              {item.name.slice(0, 1)}
            </div>
            <div>
              <p class="font-semibold text-deep">{item.name}</p>
              <p>{item.role}</p>
            </div>
          </footer>
        </blockquote>
      ))}
    </div>
  </Container>
</Section>
