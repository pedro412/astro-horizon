---
import Button from '../ui/Button.astro';
import Container from '../ui/Container.astro';

interface Props {
  hero: {
    tag: string;
    title: string;
    subtitle: string;
    primaryCta: string;
    secondaryCta: string;
    backgroundVideo: string;
    backgroundFallback: string;
    highlightStats: { label: string; value: string }[];
  };
}

const { hero } = Astro.props satisfies Props;
---

<section id="hero" class="relative isolate flex min-h-[85vh] items-center overflow-hidden bg-deep text-white">
  <div aria-hidden="true" class="absolute inset-0">
    <picture>
      <source srcset={hero.backgroundFallback} />
      <img
        src={hero.backgroundFallback}
        alt=""
        class="h-full w-full object-cover opacity-40"
        loading="lazy"
      />
    </picture>
    <video
      class="absolute inset-0 h-full w-full object-cover opacity-40"
      src={hero.backgroundVideo}
      autoplay
      muted
      loop
      playsinline
      poster={hero.backgroundFallback}
    ></video>
    <div class="absolute inset-0 bg-hero-overlay opacity-90 mix-blend-multiply"></div>
  </div>
  <Container class="relative z-10 grid gap-14 lg:grid-cols-[1fr_auto] lg:items-center">
    <div class="max-w-2xl space-y-6">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-coral-200/80">
        {hero.tag}
      </p>
      <h1 class="font-display text-4xl font-semibold leading-tight sm:text-5xl lg:text-6xl">
        <span class="text-gradient">{hero.title}</span>
      </h1>
      <p class="text-base text-white/80 sm:text-lg">{hero.subtitle}</p>
      <div class="flex flex-wrap gap-3">
        <Button variant="primary" size="lg" href="#contact">
          {hero.primaryCta}
        </Button>
        <Button variant="secondary" size="lg" href="#services" class="bg-white/90 backdrop-blur hover:bg-white">
          {hero.secondaryCta}
        </Button>
      </div>
    </div>
    <div class="grid gap-8 rounded-3xl border border-white/15 bg-white/10 p-6 backdrop-blur-sm sm:grid-cols-3 sm:gap-6 sm:p-8 lg:grid-cols-1">
      {hero.highlightStats.map((stat) => (
        <div class="space-y-1">
          <p class="font-display text-3xl font-semibold text-white sm:text-4xl">{stat.value}</p>
          <p class="text-xs uppercase tracking-[0.2em] text-white/70">{stat.label}</p>
        </div>
      ))}
    </div>
  </Container>
</section>
