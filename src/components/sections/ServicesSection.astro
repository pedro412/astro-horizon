---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';
import Button from '../ui/Button.astro';

interface Props {
  services: {
    heading: string;
    intro: string;
    items: { id: string; title: string; description: string; image: string }[];
  };
  ctaLabel: string;
}

const { services, ctaLabel } = Astro.props satisfies Props;
---

<Section id="services">
  <Container>
    <SectionHeading
      align="center"
      eyebrow="SERVICES"
      title={services.heading}
      description={services.intro}
    />
    <div class="mt-14 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      {services.items.map((service) => (
        <article class="flex h-full flex-col overflow-hidden rounded-[26px] border border-white/15 bg-white/10 shadow-[0_35px_120px_-60px_rgba(10,132,255,0.5)] backdrop-blur-2xl">
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src={service.image}
              alt=""
              class="h-full w-full object-cover"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-[#050914]/80 via-[#050914]/10"></div>
          </div>
          <div class="flex flex-1 flex-col p-8">
            <h3 class="font-display text-2xl font-semibold text-white">{service.title}</h3>
            <p class="mt-3 text-base text-white">{service.description}</p>
            <div class="mt-5 pt-4">
              <Button variant="secondary" size="md" href="#contact">
                {ctaLabel}
              </Button>
            </div>
          </div>
        </article>
      ))}
    </div>
  </Container>
</Section>
