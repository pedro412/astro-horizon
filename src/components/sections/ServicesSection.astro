---
import Section from '../ui/Section.astro';
import Container from '../ui/Container.astro';
import SectionHeading from '../ui/SectionHeading.astro';
import Button from '../ui/Button.astro';

interface Props {
  services: {
    heading: string;
    intro: string;
    items: { id: string; title: string; description: string; image: string }[];
  };
  ctaLabel: string;
}

const { services, ctaLabel } = Astro.props satisfies Props;
---

<Section id="services">
  <Container>
    <SectionHeading
      align="center"
      eyebrow="SERVICES"
      title={services.heading}
      description={services.intro}
    />
    <div class="mt-14 grid gap-8 md:grid-cols-2 xl:grid-cols-3">
      {services.items.map((service, index) => (
        <article class="group flex h-full flex-col overflow-hidden rounded-[28px] bg-white/95 shadow-[0_25px_70px_-45px_rgba(9,34,64,0.65)] ring-1 ring-ocean-100/40 transition duration-300 hover:-translate-y-1 hover:shadow-[0_28px_70px_-35px_rgba(9,34,64,0.55)]">
          <div class="relative aspect-[4/3] overflow-hidden">
            <img
              src={service.image}
              alt=""
              class="h-full w-full object-cover transition duration-500 group-hover:scale-[1.05]"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-[#03172f]/70 via-[#03172f]/10"></div>
            <div class="absolute bottom-6 left-6 inline-flex items-center gap-2 rounded-full border border-white/30 bg-white/15 px-3 py-1 text-xs font-semibold uppercase tracking-[0.25em] text-white/80">
              <span class="inline-flex h-1.5 w-1.5 rounded-full bg-white/70"></span>
              {String(index + 1).padStart(2, '0')}
            </div>
          </div>
          <div class="flex flex-1 flex-col gap-4 p-8">
            <h3 class="font-display text-2xl font-semibold text-deep">{service.title}</h3>
            <p class="text-base text-deep/70">{service.description}</p>
            <div class="mt-auto pt-2">
              <Button
                variant="primary"
                size="md"
                href="#contact"
                class="w-full justify-center shadow-md shadow-[#0f62fe]/30 group-hover:shadow-lg"
              >
                {ctaLabel}
              </Button>
            </div>
          </div>
        </article>
      ))}
    </div>
  </Container>
</Section>
